{
	"name": "auto-mod",
	"displayName": "auto-mod",
	"description": "Open css module associated with current file",
	"version": "0.0.0",
	"publisher": "alligatorjazz",
	"repository": "github:alligatorjazz/auto-mod",
	"engines": {
		"vscode": "^1.61.0"
	},
	"categories": [
		"Other"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "auto-mod.createStyleModuleHere",
				"title": "Create Style Module Here"
			}
		],
		"configuration": {
			"title": "auto-mod",
			"properties": {
				"auto-mod.autoCreate": {
					"type": "boolean",
					"default": true,
					"description": "If there is no module css, create new one."
				},
				"auto-mod.stylesDirectory": {
					"type": "string",
					"default": "../styles/",
					"description": "If you enable autoCreate, module css file will be created in it. The path should be configured as from where components exist. (e.g. ../styles/ ./styles/)"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.61.0",
		"@typescript-eslint/eslint-plugin": "^5.60.0",
		"@typescript-eslint/parser": "^5.60.0",
		"@vscode/test-electron": "^1.6.2",
		"eslint": "^8.1.0",
		"eslint-plugin-react": "^7.32.2",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4"
	}
}